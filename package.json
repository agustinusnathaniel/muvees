{
  "name": "muvees",
  "version": "1.3.4",
  "private": true,
  "author": "agustinusnathaniel",
  "engines": {
    "node": "^24.11.x"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "lint": "next lint",
    "turbo": "pnpm dlx turbo@2.6.3",
    "lint:fix": "eslint src --fix && pnpm format",
    "build": "next build",
    "build:turbo": "pnpm turbo build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "biome:check": "biome check --no-errors-on-unmatched --error-on-warnings",
    "biome:fix": "pnpm biome:check --write",
    "biome:ci": "biome ci",
    "start": "next start",
    "type:check": "tsc --noEmit",
    "check:turbo": "pnpm turbo biome:check type:check",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/outfit": "^5.2.8",
    "formik": "^2.4.9",
    "framer-motion": "^12.23.25",
    "ky": "^1.14.1",
    "lodash": "^4.17.21",
    "next": "^16.0.7",
    "next-seo": "^6.8.0",
    "nextjs-progressbar": "^0.0.16",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-icons": "^5.5.0",
    "swr": "^2.3.7"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/cz-commitlint": "^20.2.0",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "commitizen": "^4.3.1",
    "commitlint": "^20.2.0",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "next-sitemap": "^4.2.3",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3"
  }
}
